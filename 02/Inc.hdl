/**
 * 1-bit incrementer:
 * out = in + inc (arithmetic addition)
 */

CHIP Inc {
    IN in, inc;
    OUT sum, carry;

    PARTS:
    // Put you code here:
    Xor(a=in, b=inc, out=sum);
    And(a=in, b=inc, out=carry);
}